<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top Header -->
    <LinearLayout
        android:id="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_gradient"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="153dp"
            android:contentDescription="Logo"
            android:src="@drawable/digipic_logo"
            android:translationX="-15dp"
            android:translationY="0dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Notifications"
            android:src="@drawable/bckbtn" />
    </LinearLayout>

    <!-- Settings Content -->
    <ScrollView
        android:layout_below="@id/topHeader"
        android:layout_above="@id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#6B0000"
                android:layout_marginBottom="16dp" />

            <!-- GENERAL SECTION -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="General"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_gradient"
                android:layout_marginBottom="8dp" />

            <!-- Settings Items -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="Account"
                android:textColor="#000000"
                android:drawableEnd="@drawable/ic_arrow"
                android:drawablePadding="12dp"
                android:paddingStart="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="Notification"
                android:textColor="#000000"
                android:drawableEnd="@drawable/ic_arrow"
                android:drawablePadding="12dp"
                android:paddingStart="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="Delete Account"
                android:textColor="#000000"
                android:drawableEnd="@drawable/ic_arrow"
                android:drawablePadding="12dp"
                android:paddingStart="8dp" />

            <!-- Sound Switch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sounds"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switchSounds"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:thumbTint="#6B0000"
                    android:trackTint="#E0E0E0" />
            </LinearLayout>

            <!-- Music Switch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Music"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switchMusic"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:thumbTint="#6B0000"
                    android:trackTint="#E0E0E0" />
            </LinearLayout>

            <!-- FEEDBACK SECTION -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Feedback"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_gradient"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <!-- Feedback Items -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="Report a bug"
                android:textColor="#000000"
                android:drawableEnd="@drawable/ic_arrow"
                android:drawablePadding="12dp"
                android:paddingStart="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="Send Feedback"
                android:textColor="#000000"
                android:drawableEnd="@drawable/ic_arrow"
                android:drawablePadding="12dp"
                android:paddingStart="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="FAQ"
                android:textColor="#000000"
                android:drawableEnd="@drawable/ic_arrow"
                android:drawablePadding="12dp"
                android:paddingStart="8dp" />

            <!-- Logout Button -->
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/log_out"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_gradient"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_nav"
        android:elevation="6dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="5">

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:padding="8dp" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_challenges"
            android:contentDescription="Challenges"
            android:padding="8dp" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_gallery"
            android:contentDescription="Gallery"
            android:padding="8dp" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile"
            android:padding="8dp" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings"
            android:padding="8dp" />
    </LinearLayout>
</RelativeLayout>
