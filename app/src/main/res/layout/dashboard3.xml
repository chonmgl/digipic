<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top Header with Gradient and Back Button -->
    <LinearLayout
        android:id="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:background="@drawable/bg_gradient"
        android:padding="16dp">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="153dp"
            android:contentDescription="Logo"
            android:src="@drawable/digipic_logo"
            android:translationX="-15dp"
            android:translationY="-45dp" />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Notifications"
            android:src="@drawable/ic_notif"
            android:translationX="200dp"
            android:translationY="8dp" />
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Angle Shots"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        android:textColor="#5B2C2F" />

    <!-- Tab Buttons -->
    <LinearLayout
        android:id="@+id/tabButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tabIllustrations"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Illustrations"
            android:textColor="#7A3B32"
            android:background="@drawable/tab_unselected"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="20dp"
            android:textSize="12sp" />

        <Button
            android:id="@+id/tabVideo"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Video"
            android:textColor="#FFFFFF"
            android:background="@drawable/tab_selected"
            android:paddingHorizontal="20dp"
            android:textSize="12sp" />s
    </LinearLayout>

    <!-- Video Thumbnail -->
    <ImageView
        android:id="@+id/mainImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/tabButtons"
        android:layout_marginTop="24dp"
        android:src="@drawable/sample_video_frame"
        android:scaleType="centerCrop"
        android:contentDescription="Video" />

    <!-- Title of the Shot -->
    <TextView
        android:id="@+id/shotTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Shot"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#5B2C2F"
        android:layout_below="@id/mainImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/shotDescription"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/shotTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="A shot taken from a moderate distance, commonly used in dialogue scenes to show body language and part of the background, often including multiple subjects."
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="#7A3B32" />

    <!-- Pagination -->
    <LinearLayout
        android:id="@+id/pagination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shotDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/prevButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/L_btn"
            android:src="@drawable/ic_arrow_left"
            android:contentDescription="Previous" />

        <TextView
            android:id="@+id/pageCurrent"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/R_btn" />

        <TextView
            android:id="@+id/pageTotal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="19"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/circle_gray"
            android:layout_marginHorizontal="8dp" />

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/R_btn"
            android:src="@drawable/ic_arrow_right"
            android:contentDescription="Next" />
    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:background="@drawable/bottom_nav"
        android:elevation="6dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="5">

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:padding="8dp" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_challenges"
            android:contentDescription="Challenges"
            android:padding="8dp" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_gallery"
            android:contentDescription="Gallery"
            android:padding="8dp" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile"
            android:padding="8dp" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings"
            android:padding="8dp" />
    </LinearLayout>
</RelativeLayout>
